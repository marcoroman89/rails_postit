<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :class=> "span4", :placeholder=>"Title goes here" %>

  <%= f.label :url %>
  <%= f.text_field :url, :class=> "span4", :placeholder=>"URL goes here" %>

  <%= f.label :description %>
  <%= f.text_area :description, :class=> "span4", :placeholder=>"Description goes here", :rows => "6" %>

  <div class="control-group">
    <%= f.label "Categories" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
  </div>

  <div class="button">
    <%= f.submit @post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary' %>
  </div>
<% end %>

