<div class="modal-login">
  <div class="modal hide fade" id="myModal" aria-hidden="true" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-header">
      <h3>Login to Continue</h3>
    </div>

    <div class="modal-body">
      <%= form_tag '/login' do %>
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, :placeholder=>"Username goes here" %>

        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :placeholder=>"Password goes here" %>

        <div class="button">
        <%= submit_tag "Login", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= link_to 'Register Account', register_path %>
    </div>

    <div class="modal-footer">
      <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
     </div>
  </div>
</div>
