<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to "CodeFriends", root_path, :class => 'brand' %>

      <div class="nav-collapse">
        <ul class="nav">
          <% if logged_in? %>
            <li class="divider-vertical"></li>
            <li class="active"><%= link_to 'Home', posts_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to 'About',  about_path %></li>
          <% else %>
            <li><%= link_to 'Home',  root_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to 'About',  about_path %></li>
          <% end %>
        </ul>

        <ul class="nav pull-right">
            <% if logged_in? %>
              <li><%= link_to 'New Post', new_post_path %></li>
              <li class="divider-vertical"></li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <% Category.all.each do |category| %>
                    <li><%= link_to category.name, category_path(category)%></li>
                  <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to(new_category_path) do %>
                      <i class=""></i>
                      New Category
                    <% end %>
                  </li>
                </ul>
              </li>
              <li class="divider-vertical"></li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.username %><b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Update Profile', edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Logout', logout_path %></li>
                </ul>
              <li>
            <% else %>
              <li><%= link_to 'Register', register_path %></li>
              <li class="divider-vertical"></li>

              <!-- Modal Link Trigger Action -->
              <li><%= link_to 'Login', login_path, :remote => true, "data-toggle" => "modal", "data-target" => "#myModal" %></li>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
