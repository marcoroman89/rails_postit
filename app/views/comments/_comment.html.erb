<% show_post ||= false %>
<p><%= comment.body %></p>

<% if show_post %>
<em>commented on <%= link_to comment.post.title, post_path(comment.post) %></em>
<% end %>

  <div id="votes">
    <%= link_to '', vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true, class: "icon-fa-arrow-up" %>
    <span id="comment_<%=comment.id%>_votes"><%= comment.total_votes %></span>
    <%= link_to '', vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true, class: "icon-fa-arrow-down" %>
  </div>

<small class="muted">
  posted by <%= link_to comment.creator.username, user_path(comment.creator) %> <%= time_ago_in_words(comment.created_at) + ' ago' %>
  <% if logged_in? && (comment.creator == current_user) %> |
    <%= link_to "edit", edit_post_comment_path(@post, comment) %> |
    <i class="icon-fa-user"></i>
  <% end %>
</small>

